{
	"extends": "@quirk/tsconfig/base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"]
		},
		"module": "ES2022",
		"moduleResolution": "bundler",
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"declaration": false,
		"declarationMap": false,
		"downlevelIteration": true,
		"target": "ES2021",
		"lib": ["ES2021", "DOM"],
		"noEmitOnError": false,
		"allowImportingTsExtensions": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "src/**/__tests__/**", "src/**/*.test.ts", "src/**/scripts/**", "../../node_modules/**"]
}
