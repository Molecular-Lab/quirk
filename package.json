{
	"name": "@quirk/root",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"start": "turbo start",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"lint:fix": "turbo lint:fix",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"db:generate": "sqlc generate",
		"db:migrate": "./scripts/migrate.sh",
		"dev:api": "pnpm --filter @quirk/core dev",
		"dev:web": "pnpm --filter web dev",
		"dev:mcp": "pnpm --filter @quirk/mcp dev",
		"dev:agent": "pnpm --filter @quirk/agent dev"
	},
	"devDependencies": {
		"@quirk/eslint-config-base": "workspace:*",
		"eslint": "^9.23.0",
		"prettier": "^3.5.3",
		"turbo": "^2.5.2"
	},
	"packageManager": "pnpm@10.18.3",
	"engines": {
		"node": ">=22"
	}
}