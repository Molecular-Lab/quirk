{
	"extends": "../tsconfig/base.json",
	"compilerOptions": {
		"rootDir": "./",
		"plugins": [
			{
				"name": "next"
			}
		],
		"target": "ES2021",
		"lib": ["ES2021", "DOM"],
		"skipLibCheck": true,
		"declaration": false,
		"declarationMap": false,
		"noEmit": true
	},
	"include": ["**/*.ts"],
	"exclude": [
		"node_modules",
		"repository/old/**",
		"usecase/*.usecase.ts",
		"usecase/old/**",
		"service/vault-balance-verifier.service.ts",
		"service/token-transfer.service.ts",
		"**/__tests__/**",
		"**/*.test.ts"
	]
}
